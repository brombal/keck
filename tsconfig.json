{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      "/*": ["./*"],
      "#src": ["./src"]
    }
  }
}
