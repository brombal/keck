{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "paths": {
      // #keck/* can be used to reference source files
      "#keck": ["./src/index.ts"],
      "#keck/*": ["./src/*"],
      // In development, importing 'keck' will reference local source files.
      // Rollup will ignore this and treat keck as an external dependency.
      "keck": ["./src/index.ts"],
    },
  }
}
